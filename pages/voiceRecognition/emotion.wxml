<scroll-view class="background">
 <view wx:if="{{voices}}" class="common-list" style="margin-bottom:120rpx;">
<block  wx:for="{{voices}}" >
     <view class="board">
	                <view class="cell"  >
	                    <view class="cell-bd" data-key="{{item.filePath}}" bindtap="gotoPlay" > 
                       		<view  class="date">存储路径:{{item.filePath}}</view>
	                        <view  class="date" >存储时间:{{item.createTime}}</view>
	                        <view  class="date">音频大小:{{item.size}}KB</view>
	                    </view>  
						
	                </view>
        </view>
</block>
 </view>
 </scroll-view>
 
<view  wx:if="{{isSpeaking}}"  class="speak-style">
<image class="sound-style" src="../../icon/voice_icon_speech_sound_1.png" ></image>
<image wx:if="{{j==2}}" class="sound-style" src="../../icon/voice_icon_speech_sound_2.png" ></image>
<image wx:if="{{j==3}}" class="sound-style" src="../../icon/voice_icon_speech_sound_3.png" ></image>
<image wx:if="{{j==4}}" class="sound-style" src="../../icon/voice_icon_speech_sound_4.png" ></image>
<image wx:if="{{j==5}}"class="sound-style" src="../../icon/voice_icon_speech_sound_5.png" ></image>
 </view>
 <view class="operation-container">
 <!--播放录音  -->
 <image class="icon-gotoPlay" src='../../icon/gotoPlay.png' bindtap="gotoPlay"></image>
<!-- 按住录音操作 -->
  <image class="icon-recorded" src="{{pauseStatus === false ? '../../icon/recorded.png' : '../../icon/recording.png'}}" bindtouchstart="touchdown" bindtouchend="touchup"></image>
  <!-- 发送请求  -->
  <image class="icon-request" src='../../icon/request.png'> </image>
 
 </view>