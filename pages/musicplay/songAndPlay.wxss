/* pages/musicplay/songAndPlay.wxss */
.swiper-tab{
  width:100%;
  border-bottom: 3rpx solid #f8d4b0;
  text-align: center;
  line-height: 80rpx;
}

.swiper-tab-list{
  text-align: center;
  font-size: 40rpx;
  display: inline-block;
  width: 45%;
  color: #f8d4b0;
}

.on{
  color: #d3d3d3;
  border-bottom: 5rpx solid #da7c0c;
}
.swiper-box{
  display: block;
  height: 100%;
  widows: 100%;
  overflow: hidden;
}
.swiper-box view{
  text-align: left;
}

/*背景样式*/
.container{
  height: 100%;
  overflow: hidden;
}
/*1*/
.bg{
  height: 100%;
  width: 100%;
}
.bg image{
  height: 100%;
  width: 100%;
  filter: blur(50rpx);
}
/*2*/
.bg-gray{
  position: absolute;
  top: 0;
  height: 100%;
  width: 100%;
  background-color: rgba(54, 43, 41, 0.1);
}
/*3*/
.rotate-disk-container{
  position: absolute;
  top: 0;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.rotate-disk{
  width: 600rpx;
  height: 600rpx;
  border-radius: 600rpx;
  overflow: hidden;
  border: 20rpx solid rgba(54, 43, 41, 0.2);
}
.poster{
  width: 600rpx;
  height: 600rpx;
}
.rotate-360{
  animation: rotate 10s linear infinite;
}
.rotate-360-paused{
  animation: rotate 10s linear infinite;
  animation-play-state: paused;
}
@keyframes rotate
{
  0%   {transform: rotate(0deg);}
  50% {transform: rotate(180deg);}
  100% {transform: rotate(360deg);}
}
/*操作样式*/
.operation-container{
  position: absolute;
  bottom: 0;
  height: 250rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.icon-prev{
  width: 80rpx;
  height: 80rpx;
}
.icon-play{
  margin: 0 60rpx;
  width: 98rpx;
  height: 98rpx;
}
.icon-pause{
  margin: 0 60rpx;
  width: 98rpx;
  height: 98rpx;
}
.icon-next{
  width: 80rpx;
  height: 80rpx;
}

/* 歌曲列表item*/
.songlist{
	
	width: 100%;
	overflow-x: hidden;
	overflow-y: visible;
	font-size: 0.8rem;
}
.songitem, .songitem-mini{
	height: 3rem;
	line-height: 1.5rem;
	display: flex;
	border-bottom: 1px solid #eee;
	padding: 10rpx 0;
	width: 100%;
}
.songitem:active, .songitem-mini:active{
	background: #eee;
}

.song-play{
	width: 10%;
	text-align: center;
	vertical-align: middle;
}
.song-play image{
	line-height: 3rem;
	width: 50rpx;
	height: 50rpx;
	padding-top: 13px;
}
.song-detail{
	white-space: nowrap;
	width: 90%;
}
.song-title{
	font-size: 1rem;
}
.song-subtitle{
	color: #555;
}