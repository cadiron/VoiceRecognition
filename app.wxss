/**app.wxss**/
@import 'wa-ui.wxss';
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

/* 歌曲列表item*/
.songlist{
	
	width: 100%;
	overflow-x: hidden;
	overflow-y: visible;
	font-size: 0.8rem;
}
.songitem, .songitem-mini{
	height: 3rem;
	line-height: 1.5rem;
	display: flex;
	border-bottom: 1px solid #eee;
	padding: 10rpx 0;
	width: 100%;
}
.songitem:active, .songitem-mini:active{
	background: #eee;
}

.song-play{
	width: 10%;
	text-align: center;
	vertical-align: middle;
}
.song-play image{
	line-height: 3rem;
	width: 50rpx;
	height: 50rpx;
	padding-top: 13px;
}
.song-detail{
	white-space: nowrap;
	width: 90%;
}
.song-title{
	font-size: 1rem;
}
.song-subtitle{
	color: #555;
}